%head
  %link{:rel => "stylesheet", :href => "/stylesheets/main.css", :type => "text/css"}
  %title Consola
  %script{:src => "http://use.typekit.com/vkz1job.js", :type => "text/javascript"}
  :javascript
    try{Typekit.load();}catch(e){}
%body
  %header
    %h1.logo Consola
  .wrapper
    .code_editor.column
      %h2
        Code Editor
      #editor
      .end_column
      %form{:action=>'/process', :method=>'POST', :id => "form_upload_code"}
        %textarea{:cols => 40, :id=>"code_holder", :style => "display:none",:name => "code"}=@code
        %a.send-button.link-button{:href => "#"} Send my code!
        .loader
    .results.column
      %h2
        Results terminal
        .loader
      #error_message
      #result_holder
        ="#=> Hi there, sexy!"
        = @result
      .end_column
  %footer
