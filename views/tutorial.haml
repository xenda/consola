%body
  %header
    %h1.logo Consola
  .wrapper
    .code_editor.column
      %h2
        Code Editor
        %a.saved-as
      #editor
      .end_column
      %form{:action=>"/tutorial/#{params[:id]}", :method=>'POST', :id => "form_tutorial_upload_code"}
        %textarea{:cols => 40, :id=>"code_holder", :style => "display:none",:name => "code"}=@code
        %a.send-button.link-button{:href => "#"} Send my code!
        .loader
    .results.column
      %h2
        Results terminal
        .loader
      #error_message
      #result_holder
        - if @result
          = @result
        - else
          ="#=> Type your code and wait to see their result here!"
      .end_column
